{
	"manifest_version": 2,
	"name": "Climate Block",
	"version": "1.0.2",
	"description": "Murdoch press denies climate-change and manipulates our governments. This extension blocks all of their websites.",
	"author": "Rafael Schouten",
	"icons": {
    "16": "icons/favicon16.png",
    "32": "icons/favicon32.png",
    "48": "icons/favicon48.png",
    "96": "icons/favicon96.png",
    "128": "icons/favicon128.png"
	},
	"options_ui": {
		"open_in_tab": true,
		"page": "options/options.html"
	},
	"background": {
		"scripts": [
      "browser-polyfill.js",
      "sites.js", 
      "background.js"
    ]
	},
  "browser_action": {
    "default_icon": {
      "16": "icons/favicon16.png",
      "32": "icons/favicon32.png",
      "48": "icons/favicon48.png",
      "96": "icons/favicon96.png",
      "128": "icons/favicon128.png"
    }
  },
	"web_accessible_resources": ["/blocked/blocked.html"],
	"permissions": ["contextMenus","storage","webRequest","webRequestBlocking","<all_urls>"]
}
