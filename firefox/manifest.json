{
	"manifest_version": 2,
	"name": "Doch Block",
	"version": "1.0",
	"description": "Block climate-change denying Murdoch websites.",
	"author": "Rafael Schouten",
	
	"developer": {
		"name": "Rafael Schouten",
		"url": "http://xxx.com"
	},

	"icons": {
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"64": "icons/icon-64.png",
		"96": "icons/icon-96.png",
		"128": "icons/icon-128.png"
	},
	
	"browser_specific_settings": {
		"gecko": {
			"id": "xxx@xxx.com",
			"strict_min_version": "57.0"
		}
	},
	
	"options_ui": {
		"open_in_tab": true,
		"browser_style": false,
		"page": "options/options.html"
	},
	
	"background": {
		"scripts": ["sites.js", "background.js"]
	},
	
	"web_accessible_resources": ["/blocked/blockpage.html"],
	
	"permissions": ["storage","webRequest","webRequestBlocking","<all_urls>"]
}
