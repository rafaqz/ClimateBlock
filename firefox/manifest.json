{
	"manifest_version": 2,
	"name": "Climate Block",
	"version": "1.0",
	"description": "Murdoch press denies climate-change and manipulates our governments. This extension blocks all of their websites.",
	"author": "Rafael Schouten",
	
	"developer": {
		"name": "Rafael Schouten"
	},

	"icons": {
    "32": "icons/favicon.svg"
	},
	
	"browser_specific_settings": {
		"gecko": {
			"id": "x@x.com",
			"strict_min_version": "57.0"
		}
	},
	
	"options_ui": {
		"open_in_tab": true,
		"browser_style": false,
		"page": "options/options.html"
	},
	
	"background": {
		"scripts": ["sites.js", "background.js"]
	},


  "browser_action": {
    "default_icon": {
      "32": "icons/favicon.svg"
    }
  },

	
	"web_accessible_resources": ["/blocked/blocked.html"],
	
	"permissions": ["contextMenus","storage","webRequest","webRequestBlocking","<all_urls>"]
}
